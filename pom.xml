			<!-- ############################ -->
			<!-- Surefire regression testing -->
			<!-- ############################ -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${maven.surefire.plugin.version}</version>
				<configuration>
					<!-- Run all tests within the same JVM that is separate from the main 
						JVM used to run maven. -->
					<forkMode>once</forkMode>
					<argLine />
					<systemPropertyVariables>
						<!-- Phase name, used by the enum type MavenPhase -->
						<property>
							<name>testPhase</name>
							<value>test</value>
						</property>
						<!-- Log4J configuration file name. Keep at default value otherwise 
							eclipse doesn't work well with tests logging. -->
						<property>
							<name>log4j.configuration</name>
							<value>log4j.properties</value>
						</property>
						<!-- CXF JSE logging configuration file location. For now this location 
							is not found so by specifying the following property all output from the 
							CXF server is suppressed during tests, which is usually what we want. -->
						<property>
							<name>java.util.logging.config.file</name>
							<value>logging.properties</value>
						</property>
					</systemPropertyVariables>
					<includes>
						<!-- Unit test class naming pattern -->
						<include>**/UTest*.java</include>
						<!-- XQuery unit test class naming pattern -->
						<include>**/QTest*.java</include>
						<!-- Portable test class naming pattern. These tests are run both as 
							unit and integration tests. -->
						<include>**/PTest*.java</include>
						<!-- Optional tests to be run only in certain configurations (e.g. 
							Hudson RT). To add more patterns, you can define more properties like ${surefire.optional.tests.unit2}, 
							define them to be empty by default and turn them on for some profiles. -->
						<include>${surefire.optional.tests.unit}</include>
					</includes>
					<excludes>
						<!-- Anything that matches the following is a test suite run in an 
							IDE, or a test fixture, don't run it. -->
						<exclude>**/*Fixture.java</exclude>
						<exclude>**/Suite*.java</exclude>
						<!-- Anonymous nested classes in test classes are not run. -->
						<exclude>**/*$*</exclude>
						<!-- Selenium integration tests. Require an X11 environment to run 
							and so skipped in the test phase and included in -->
						<exclude>**/STest*.java</exclude>
					</excludes>
				</configuration>
				<!-- Integration test file name patterns -->
				<executions>
					<execution>
						<id>integration-tests</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
						<configuration>
							<skip>${maven.test.skip}</skip>
							<excludes>
								<exclude>none</exclude>
							</excludes>
							<includes>
								<!-- Portable test class naming pattern. These tests are run both 
									as unit and integration tests. -->
								<include>**/PTest*.java</include>
								<!-- OSGi integration test class naming pattern -->
								<include>**/OTest*.java</include>
								<!-- Optional tests to be run only in certain configurations (e.g. 
									Hudson RT). To add more patterns, you can define more properties like ${surefire.optional.tests.integration2}, 
									define them to be empty by default and turn them on for some profiles. -->
								<include>${surefire.optional.tests.integration}</include>
								<!-- Selenium integration tests -->
								<!-- <include>**/STest*.java</include> -->
							</includes>
							<systemPropertyVariables>
								<!-- Phase name, used by the enum type MavenPhase -->
								<property>
									<name>testPhase</name>
									<value>integration-test</value>
								</property>
							</systemPropertyVariables>
						</configuration>
					</execution>
				</executions>
			</plugin>


