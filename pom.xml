			<!-- ########################## -->
			<!-- Felix OSGi Packaging -->
			<!-- ########################## -->
			<!-- for packaging as an OSGi bundle, we use the maven-bundle-plugin. 
				see http://felix.apache.org/site/maven-bundle-plugin-bnd.html for more info -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>${maven.bundle.plugin.version}</version>
				<extensions>true</extensions>
				<configuration>
					<obrRepository>NONE</obrRepository>
					<instructions>
						<Bundle-Name>further-${project.artifactId}</Bundle-Name>
						<!-- Must be DISJOINT file patterns, or files will be loaded multiple 
							times during bundle start-up. -->
						<Bundle-Blueprint>
							META-INF/blueprint/*-osgi*.xml,
							META-INF/blueprint/*-context*.xml
						</Bundle-Blueprint>
						<!-- Must be DISJOINT file patterns, or files will be loaded multiple 
							times during bundle start-up. There is typically a single "all" file that 
							only contains imports to other files in the desired loading order, which 
							may be different for each module (FUR-539). -->
						<Spring-Context>
							META-INF/spring/*-all.xml;publish-context:=false
						</Spring-Context>
						<!-- Default package imports and exports naming patterns. The "shortName" 
							proeprty must be defined by the child project for this to work. -->
						<Export-Package>${further.osgi.export.pkg}</Export-Package>
						<Import-Package>${further.osgi.import.pkg}</Import-Package>
						<Private-Package>${further.osgi.private.pkg}</Private-Package>
						<DynamicImport-Package>${further.osgi.dynamicimport.pkg}</DynamicImport-Package>
						<Embed-Dependency>${further.osgi.embed.dependency}</Embed-Dependency>
						<Embed-Transitive>${further.osgi.embed.transitive}</Embed-Transitive>
						<Require-Bundle>${further.osgi.require.bundle}</Require-Bundle>
						<Fragment-Host>${further.osgi.fragment.host}</Fragment-Host>
						<_failok>${further.osgi.failok}</_failok>
					</instructions>
				</configuration>
			</plugin>

